<div id="breadcrumbs-wrapper">
    <!-- Search for small screen -->
    <div class="header-search-wrapper grey hide-on-large-only">
        <i class="mdi-action-search active"></i>
        <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Buscar Curso..">
    </div>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="breadcrumbs-title">Dados de Acesso</h5>
                <ol class="breadcrumbs">
                    <li>Edite os seus dados nos campos abaixo:</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<%= form_for :acesso, url: dadosdeacesso_update_path, :html => { :id => "formdadosdeacesso" }, :method => :POST do |f| %>
<!--start container-->
<div class="container container-dash">
    <% if flash[:alert] %>
    <div class="row" style="margin-bottom:20px;">
        <div class="col s6">
            <div id="card-alert" class="card red" style="margin:0;">
                <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
                    <p>
                        <i class="mdi-alert-error"></i>
                        <%= flash[:alert] %></p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <% if flash[:notice] %>
    <div class="row" style="margin-bottom:20px;">
        <div class="col s6">
            <div id="card-alert" class="card green" style="margin:0;">
                <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
                    <p>
                        <i class="mdi-navigation-check"></i>
                        <%= flash[:notice] %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <div class="row">
        <div class="input-field col s12">
            <%= f.text_field :senha_atual, type: "password", :class => "validate" %>
            <%= f.label :senha_atual, "Senha Atual" %>
        </div>
    </div>
    <div class="row" style="margin-top:20px;">
        <div class="input-field col s12">
            <%= f.text_field :nova_senha, type: "password", :class => "validate" %>
            <%= f.label :nova_senha, "Nova Senha" %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <%= f.text_field :repita_nova_senha, type: "password", :class => "validate" %>
            <%= f.label :repita_nova_senha, "Repita Nova Senha" %>
        </div>
    </div>
    <div class="row" style="margin:30px 0 60px 0;">
        <button class="btn waves-effect waves-light " type="submit" name="action">Salvar Dados</button>
    </div>
</div>
<% end %>
