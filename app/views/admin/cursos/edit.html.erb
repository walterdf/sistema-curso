<div id="breadcrumbs-wrapper">
   <div class="container">
     <div class="row">
       <div class="col s12 m12 l12">
         <h5 class="breadcrumbs-title">Cursos</h5>
         <ol class="breadcrumbs">
             <li><%=link_to "< Voltar", :controller => "cursos" , :action => "index" %></li>
         </ol>
       </div>
     </div>
   </div>
 </div>
<%= form_for @cursos, url: admin_cursos_update_path, :html => { :id => "formcursosupdate" }, :method => :POST do |f| %>
  <!--start container-->
  <div class="container container-dash">
    <% if flash[:alert] %>
    <div class="row" style="margin-bottom:20px;">
      <div class="col s4">
        <div id="card-alert" class="card red" style="margin:0;">
          <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
            <p><i class="mdi-alert-error"></i> <%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% if flash[:notice] %>
    <div class="row" style="margin-bottom:20px;">
      <div class="col s4">
      <div id="card-alert" class="card green" style="margin:0;">
        <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
          <p><i class="mdi-navigation-check"></i> <%= flash[:notice] %></p>
        </div>
      </div>
    </div>
  </div>
    <% end %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name, type: "text", :class => "validate" %>
        <%= f.label :name, "Nome Curso", :for=>"nome" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :descricao, type: "text", :class => "materialize-textarea validate" %>
        <%= f.label :descricao, "Descrição", :for=>"descricao" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :url_thumb, type: "text", :class => "validate" %>
        <%= f.label :url_thumb, "Thumb", :for=>"thumb" %>
      </div>
    </div>
    <div class="row" style="margin:30px 0 60px 0;">
      <%= f.text_field :edit_id, type: "hidden", :class => "validate", :value => params[:id]  %>
      <button class="btn waves-effect waves-light " type="submit" name="action">Salvar Curso</button>
    </div>
  </div>
  <!--end container-->
<% end %>
