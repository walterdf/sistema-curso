<div id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="breadcrumbs-title">Vídeo</h5>
                <ol class="breadcrumbs">
                    <li><%=link_to "< Voltar", :controller => "videos" , :action => "index", :idcurso => params["idcurso"] %></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<%= form_for @video, url: admin_videos_update_path, :html => { :id => "formnovo" }, :method => :POST do |f| %>
<!--start container-->
<div class="container container-dash">
    <% if flash[:alert] %>
    <div class="row" style="margin-bottom:20px;">
        <div class="col s6">
            <div id="card-alert" class="card red" style="margin:0;">
                <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
                    <p>
                        <i class="mdi-alert-error"></i>
                        <%= flash[:alert] %></p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <% if flash[:notice] %>
    <div class="row" style="margin-bottom:20px;">
        <div class="col s6">
            <div id="card-alert" class="card green" style="margin:0;">
                <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
                    <p>
                        <i class="mdi-navigation-check"></i>
                        <%= flash[:notice] %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <div class="row" style="margin-top:20px;">
      <div class="input-field col s12">
        <%= f.text_field :name, type: "text", :class => "validate", :id => "nome" %>
        <%= f.label :name, "Nome", :for=>"nome" %>
      </div>
    </div>
    <div class="row" style="margin-top:20px;">
      <div class="input-field col s12">
        <%= f.text_area :html, type: "text", :class => "materialize-textarea validate", :id => "html" %>
        <%= f.label :html, "Html Vídeo", :for=>"html" %>
      </div>
    </div>
    <div class="row" style="margin-top:20px;">
      <div class="input-field col s12">
        <%= f.text_field :duration, type: "text", :class => "validate", :id => "duracao", :maxlength => "5" %>
        <%= f.label :duration, "Duração", :for=>"duracao" %>
      </div>
    </div>
    <div class="row" style="margin:30px 0 60px 0;">
      <%= f.text_field :curso_id, type: "hidden", :class => "validate", :value => params[:idcurso].to_i  %>
      <%= f.text_field :edit_id, type: "hidden", :class => "validate", :value => params[:id].to_i  %>
      <button class="btn waves-effect waves-light " type="submit" name="action">Salvar Vídeo</button>
    </div>
</div>
<script>
  $(document).ready(function(){
    $("#duracao").mask('00:00');
  });
</script>
<% end %>
