<div id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s4">
                <h5 class="breadcrumbs-title">Liberar Acesso</h5>
                <ol class="breadcrumbs">
                    <li>
                      <a href="usuarios">
                          <%= link_to "< Voltar", :controller => "usuarios", :action => "index" %></a>
                    </li>
                    <li>
                        <a href="acesso/novo?iduser=<%=params[:iduser] %>" class="waves-effect waves-light btn">
                            <i class="mdi-content-add left"></i>Curso</a>
                    </li>
                </ol>
            </div>
            <div class="col s8 right-align">
                <h5 class="breadcrumbs-title"><%=@usuario.nome_completo %></h5>
                <div class="right">
                    <p><%=@usuario.email %></p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container container-dash" style="padding: 20px;">
    <% if flash[:notice] %>
    <div class="row" style="margin-bottom:20px;">
        <div class="col s6">
            <div id="card-alert" class="card green" style="margin:0;">
                <div class="card-content white-text" style="padding: 6px 0 13px 15px;">
                    <p>
                        <i class="mdi-navigation-check"></i>
                        <%= flash[:notice] %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <div id="card-widgets">
        <table class="striped">
            <thead>
                <tr>
                    <th data-field="name">Curso</th>
                    <th data-field="date">Data</th>
                    <th data-field="edit" style="width:100px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% @usuariocurso.each do |a| %>
                <tr>
                    <td><%=a.nome_curso %></td>
                    <td><%=a.data.strftime("%d/%m/%Y") %></td>
                    <td>
                        <a class="btn-floating" href="acesso/edit/<%=a.id %>?iduser=<%=params[:iduser] %>">
                            <i class="mdi-image-edit" style="font-size:25px;"></i>
                        </a>
                        <a class="btn-floating" onclick="return confirm('Tem certeza que deseja excluir esse acesso?')" href="acesso/delete/<%=a.id %>?iduser=<%=params[:iduser] %>">
                            <i class="mdi-content-clear" style="font-size:25px;"></i>
                        </a>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
